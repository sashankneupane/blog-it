<aside
  class="sticky shadow lg:col-span-1 hover:border-none hover:shadow-2xl focus:shadow-2xl py-10 px-10 hover:cursor-pointer border-red-200 border-l-2 rounded-lg w-80"
>
  <!-- Author Profile Information -->
  <div class="mb-6">
    <h2
      class="text-xl items-center font-semibold font-mono m-0 mb-4 px-4 py-2 bg-purple-300 rounded-xl"
    >Your Profile</h2>
    <div class="flex flex-col items-center space-x-4">
      <img
        class="w-32 h-32 rounded-full my-5"
        src="/img/nav/myprofile.jpeg"
        alt="Author Avatar"
      />
      <div>
        {{#with user}}
          <p class="text-lg font-semibold">{{name}}</p>
          <p class="text-gray-600">Email: {{email}}</p>
          <p class="text-gray-600">Username: {{username}}</p>
        {{/with}}
      </div>
    </div>
  </div>

  <!-- Edit Profile Form -->
  {{#with user}}
    <form action="/u/update-profile" method="POST" class="space-y-4">
      <h3 class="text-lg font-semibold mb-2">Edit Profile</h3>
      <div class="space-y-2">
        <label for="username" class="block font-medium">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="w-full px-4 py-2 border rounded-md"
          value={{username}}
        />
      </div>
      <div class="space-y-2">
        <label for="firstName" class="block font-medium">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          class="w-full px-4 py-2 border rounded-md"
          value={{name}}
        />
      </div>
      <div class="space-y-2">
        <label for="email" class="block font-medium">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full px-4 py-2 border rounded-md"
          value={{email}}
          pattern="[^\s@]+@[^\s@]+\.[^\s@]+"
          required
        />
      </div>
      <div class="space-y-2">
        <label for="password" class="block font-medium">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full px-4 py-2 border rounded-md"
          placeholder="Enter your password"
        />
      </div>
      <button
        type="submit"
        class="bg-purple-300 text-grey-900 px-4 py-2 rounded-md hover:bg-purple-400"
      >
        Save Changes
      </button>
    </form>
  {{/with}}
</aside>

{{! get script from public/js }}
<script src="/js/dashboard/profile-form-validation.js"></script>