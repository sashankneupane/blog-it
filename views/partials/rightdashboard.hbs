<aside
  class="sticky shadow lg:col-span-1 hover:border-none hover:shadow-2xl focus:shadow-2xl py-10 px-10 hover:cursor-pointer border-red-200 border-l-2 rounded-lg w-80"
>

  <!-- Author Profile Information -->
  {{#with user}}
    <div class="mb-6 relative">
      <h2
        class="text-xl items-center font-semibold font-mono m-0 mb-4 px-4 py-2 bg-purple-300 rounded-xl"
      >
        Your Profile
      </h2>
      <div class="flex flex-col items-center space-x-4">
        <img
          class="w-32 h-32 overflow-hidden rounded-full my-5"
          src="/img/dp/{{_id}}.png"
          alt="Author Avatar"
        />
        <div class="relative">
          <p class="text-lg font-semibold">{{username}}</p>
          <p class="text-gray-600">{{email}}</p>
          <div class="edit-icon absolute bottom-0 right-0 p-2 hidden">
            <a
              href="/blog/{{_id}}/edit"
              class="bg-blue-100 hover:bg-blue-200 p-2 rounded-md"
            >
              <img class="h-4 w-" src="/img/edit.png" alt="Edit" />
            </a>
          </div>
        </div>
      </div>
    </div>
  {{/with}}

  <!-- Edit Profile Form -->
  {{#with user}}
    <form action="/u/update-profile" method="POST" class="space-y-4">
      <h3 class="text-lg font-semibold mb-2">Edit Profile</h3>
      <div class="space-y-2">
        <label for="username" class="block font-medium">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="w-full px-4 py-2 border rounded-md"
          value={{username}}
        />
      </div>
      <div class="space-y-2">
        <label for="email" class="block font-medium">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full px-4 py-2 border rounded-md"
          value={{email}}
          pattern="[^\s@]+@[^\s@]+\.[^\s@]+"
          required
        />
      </div>
      <div class="space-y-2">
        <label for="password" class="block font-medium">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full px-4 py-2 border rounded-md"
          placeholder="Enter your password"
        />
      </div>
      <div
        class="success-container hidden flex-between bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative"
      >
        <span class="message"></span>
        <button class="close-btn" onclick="closeAlert(this.parentElement)">
          <svg
            class="w-4 h-4 fill-current"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
          >
            <path
              d="M10 8.59l-4.95-4.95-1.41 1.41L8.59 10 3.64 14.95l1.41 1.41L10 11.41l4.95 4.95 1.41-1.41L11.41 10l4.95-4.95-1.41-1.41L10 8.59z"
            />
          </svg>
        </button>
      </div>
      <div
        class="error-container hidden bg-red-100 flex-between border border-red-400 text-red-700 px-4 py-3 rounded relative"
      >
        <span class="message"></span>
        <button class="close-btn" onclick="closeAlert(this.parentElement)">
          <svg
            class="w-4 h-4 fill-current"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
          >
            <path
              d="M10 8.59l-4.95-4.95-1.41 1.41L8.59 10 3.64 14.95l1.41 1.41L10 11.41l4.95 4.95 1.41-1.41L11.41 10l4.95-4.95-1.41-1.41L10 8.59z"
            />
          </svg>
        </button>
      </div>
      <button
        id="profile-update-btn"
        type="submit"
        class="bg-purple-300 text-grey-900 px-4 py-2 rounded-md hover:bg-purple-400"
      >
        Save Changes
      </button>
    </form>
  {{/with}}
</aside>

{{! get script from public/js }}
<script src="/js/dashboard/right-dashboard.mjs"></script>