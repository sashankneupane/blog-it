<div class="min-h-screen bg-red-100 flex flex-row justify-around">
  <aside
    id="default-sidebar"
    class="shadow rounded-lg p-4 mt-4 top-0 left-0 z-40 w-64 h-full border-r-2 border-red-200 transition-transform -translate-x-full sm:translate-x-0 hover:shadow-2xl hover:cursor-pointer hover:border-none"
    aria-label="Sidebar"
  >
    <h1 class="font-semibold font-mono">Blog Outline</h1>
  </aside>

  <!-- Center Section (Blog Content) -->
  <div class="center-section w-3/5 p-4 mt-4">
    {{#with blogPost}}
      <!-- Blog Title -->
      <h1 class="text-3xl font-bold text-gray-900 mb-4">{{title}}</h1>

      <!-- Author Info -->
      <p class="text-gray-700">Written by
        <a
          href="/u/{{author.username}}"
          class="text-blue-500"
        >{{author.username}}</a></p>
      <p class="text-gray-700">Published on {{formatDate publicationDate}}</p>
      {{#if updatedDate}}
        <p class="text-gray-700">Updated on {{formatDate updatedDate}}</p>
      {{/if}}

      <!-- Blog Content -->
      <div class="content mt-6 text-gray-800">
        {{{this.content}}}
      </div>

      <!-- Like and Comment Count -->
      <div class="mt-6 text-gray-700 flex flex-row justify-start">
        <div class="flex flex-row align-middle">
            <span class="items-center align-middle">{{likes.length}}</span>
            <svg class="w-6 h-6 ml-2" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M8.9707 19.42V13.89" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
