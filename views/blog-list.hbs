<div class="bg-red-100 min-h-full">

  <div>
    <div class="mx-auto max-w-screen-sm text-center">
      <h2
        class="py-8 text-3xl lg:text-4xl tracking-tight font-mono font-semibold text-gray-900 dark:text-white"
      >{{username}}'s Blogs</h2>
    </div>
    <div class="flex flex-col" id="content">
      {{#unless blogPosts}}
        <div class="flex flex-col items-center justify-center">
          <p class="text-xl font-semibold">No blogs found.</p>
        </div>
      {{/unless}}
      {{#each blogPosts}}
        <article
          class="p-6 w-3/5 mx-auto mb-4 mt-2 bg-purple-100 rounded-3xl border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700 hover:bg-purple-200 hover:shadow-xl hover:cursor-pointer"
        >
          <!-- Display tags for each blog post -->
          <div class="flex justify-between items-center mb-5 text-gray-500">
            <div>
              {{#each tags}}
                <a
                  class="inline-block px-3 py-1 mr-2 text-sm font-semibold text-gray-700 bg-pink-300 rounded-full"
                  href="/home?tag={{name}}"
                >{{name}}</a>
              {{/each}}
            </div>
            <span class="text-sm">{{formatTimeElapsed publicationDate}}</span>
          </div>
          <h2
            class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
          ><a href="/blog/{{_id}}">{{title}}</a></h2>
          <p
            class="mb-5 font-light text-gray-500 dark:text-gray-400"
          >{{this/content}}...</p>
          <div class="flex justify-between items-center">
            <div class="flex items-center space-x-4">
              <img
                class="w-7 h-7 rounded-full"
                src="/img/dp/{{author/_id}}.png"
                alt="Jese Leos avatar"
              />
              <a href="/u/{{author.username}}">
                <span
                  class="font-medium dark:text-white"
                >{{author.username}}</span>
              </a>
            </div>
            <a
              href="/blog/{{_id}}"
              class="inline-flex items-center font-medium text-primary-600 dark:text-primary-500 hover:underline"
            >
              Read more
              <svg
                class="ml-2 w-4 h-4"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              ><path
                  fill-rule="evenodd"
                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"
                ></path></svg>
            </a>
          </div>
        </article>
      {{/each}}

    </div>
  </div>

</div>