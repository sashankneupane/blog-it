<link rel="stylesheet" href="/styles/dashboard.css">
<div class="dashboard">
    <header>
        <h1>Welcome, {{username}}!</h1>
        <a href="/auth/logout">Log Out</a>
    </header>

    <section class="widget">
        <h2>User Stats</h2>
        <p><strong>Total Blogs: </strong> {{userBlogs.length}}</p>
        <!-- Add more user statistics here -->
    </section>

    <section class="widget">
        <h2>Your Blogs</h2>
        {{#if userBlogs.length}}
            <table class="blog-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each userBlogs}}
                        <tr>
                            <td><a href="/blog/{{_id}}">{{title}}</a></td>
                            <td>
                                <a href="/blog/{{_id}}/edit">Edit</a>
                                <a href="/blog/{{_id}}/delete">Delete</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <p>No blogs available.</p>
        {{/if}}
        <a href="/blog/write" class="create-button">Create New Blog</a>
    </section>
</div>