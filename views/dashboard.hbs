  <main class="mx-auto text-center lg:mb-16 mb-8">
    <h1 class="text-3xl font-semibold font-mono">Your Blog Posts</h1>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-10">
      <table class="text-sm text-left rtl:text-right text-gray-500 w-full">
        <thead class="text-xs text-gray-700 uppercase bg-purple-300">
          <tr>
            <th scope="col" class="px-6 py-3">
              Title
            </th>
            <th scope="col" class="px-6 py-3">
              Date
            </th>
            <th scope="col" class="px-6 py-3">
              Action
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each userBlogs}}
            <tr class="odd:bg-red-50 even:bg-red-100 border-purple-300">
              <th
                scope="row"
                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
              >
                <a href="/blog/{{_id}}">{{title}}</a>
              </th>
              <td class="px-6 py-4">
                {{publicationDate}}
              </td>
              <td class="px-6 py-4">
                <a
                  href="/blog/{{_id}}/edit"
                  class="font-medium text-blue-600 dark:text-blue-500 hover:underline"
                >Edit</a>
                <a
                  href="/blog/{{_id}}/delete"
                  class="font-medium text-red-600 dark:text-red-500 hover:underline ml-2"
                >Delete</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </main>

  <aside
    class="sticky lg:col-span-1 hover:border-none hover:shadow-2xl focus:shadow-2xl py-10 px-10 hover:cursor-pointer border-red-200 border-l-2"
  >
    <!-- Author Profile Information -->
    <div class="mb-6">
      <h2
        class="text-xl font-semibold font-mono m-0 mb-4 px-4 py-2 bg-purple-300 rounded-xl"
      >Your Profile</h2>
      <div class="flex flex-col items-center space-x-4">
        <img
          class="w-32 h-32 rounded-full my-5"
          src="/img/nav/myprofile.jpeg"
          alt="Author Avatar"
        />
        <div>
          <p class="text-lg font-semibold">Author Name</p>
          <p class="text-gray-600">Email: author@example.com</p>
          <p class="text-gray-600">Username: author123</p>
        </div>
      </div>
    </div>

    <!-- Edit Profile Form -->
    <form action="/edit-profile" method="POST" class="space-y-4">
      <h3 class="text-lg font-semibold mb-2">Edit Profile</h3>
      <div class="space-y-2">
        <label for="username" class="block font-medium">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="w-full px-4 py-2 border rounded-md"
          value="author123"
        />
      </div>
      <div class="space-y-2">
        <label for="firstName" class="block font-medium">First Name</label>
        <input
          type="text"
          id="firstName"
          name="firstName"
          class="w-full px-4 py-2 border rounded-md"
          value="Author"
        />
      </div>
      <div class="space-y-2">
        <label for="lastName" class="block font-medium">Last Name</label>
        <input
          type="text"
          id="lastName"
          name="lastName"
          class="w-full px-4 py-2 border rounded-md"
          value="Name"
        />
      </div>
      <div class="space-y-2">
        <label for="email" class="block font-medium">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full px-4 py-2 border rounded-md"
          value="author@example.com"
        />
      </div>
      <div class="space-y-2">
        <label for="password" class="block font-medium">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full px-4 py-2 border rounded-md"
          placeholder="Enter new password"
        />
      </div>
      <div class="space-y-2">
        <label for="confirmPassword" class="block font-medium">Confirm Password</label>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          class="w-full px-4 py-2 border rounded-md"
          placeholder="Confirm new password"
        />
      </div>
      <button
        type="submit"
        class="bg-primary-600 text-white px-4 py-2 rounded-md hover:bg-primary-700"
      >
        Save Changes
      </button>
    </form>
