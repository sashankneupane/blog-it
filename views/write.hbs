<div
  class="bg-red-100 flex flex-row justify-around py-10 px-5"
>
{{>leftdashboard}}

  <div class="mx-auto p-4 h-full rounded-lg max-w-4/5 w-3/5">
    <header class="text-center">
      <h1 class="text-2xl font-semibold font-mono">Create a Blog Post</h1>
    </header>
    <div class="">
      <form id="write-blog-form" action="/blog/write" method="post">
        <div class="mb-4">
          <label for="title" class="block font-medium">Title</label>
          <input
            type="text"
            name="title"
            placeholder="Enter the title of your blog"
            required
            class="w-full px-3 bg-red-50 py-2 border rounded-md focus:outline-none focus:ring focus:ring-primary-400"
          />
        </div>

        <div class="mb-6">
          <label for="content" class="block font-medium mb-2">Content</label>
          <textarea
            name="content"
            id="blogContent"
            placeholder="Write your blog content"
            rows="8"
            required
            class="w-full px-3 resize-none overflow-hidden bg-red-50 py-2 border rounded-md focus:outline-none focus:ring focus:ring-primary-400"
          ></textarea>
        </div>

        <div class="mb-4">
          <label for="tags" class="block font-medium">Tags (comma-separated)</label>
          <div class="mt-2 hidden flex-row justify-start rounded-md text-white" id="tag-container"></div>
          <input
            type="text"
            name="tagsInput"
            placeholder="Add tags (comma-separated)"
            id="tags"
            class="w-full bg-red-50 px-3 py-2 mt-2 border rounded-md focus:outline-none focus:ring focus:ring-primary-400"
          />
        </div>

        <button
          type="submit"
          class="px-10 self-center text-gray-900 py-2 border-red-300 border-2 rounded-md hover:bg-red-300 focus:ring-4 focus:ring-red-600"
        >
          Create Blog
        </button>
      </form>
  </div>
</div>
{{> rightdashboard}}
</div>

<script src="/js/blogs/write-blog.mjs"></script>