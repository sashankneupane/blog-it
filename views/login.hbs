<link rel="stylesheet" href="/styles.css" />
<div
  class="flex min-h-screen items-center justify-center px-6 py-12 lg:px-8 bg-red-100"
>
  <div class="bg-red-50 w-full max-w-sm p-6 rounded-lg shadow-lg">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <img
        class="mx-auto h-10 w-auto"
        src="/img/nav/icon.png"
        alt="Your Company"
      />
      <h2
        class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900"
      >Sign in to your account</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
      <form class="space-y-6" action="/auth/login{{#if returnTo}}?returnTo={{req.query.returnTo}}{{/if}}" method="POST">
        <div>
          <label
            for="username"
            class="block text-sm font-medium leading-6 text-gray-900"
          >Username</label>
          <div class="mt-2">
            <input
              id="username"
              name="username"
              type="text"
              required
              class="block pl-2 w-full rounded-md border border-gray-300 py-2 text-gray-900 shadow-sm focus:ring-2 focus:ring-red-600 placeholder:text-gray-400 focus:outline-none"
            />
          </div>
        </div>

        <div>
          <div class="flex items-center justify-between">
            <label
              for="password"
              class="block text-sm font-medium leading-6 text-gray-900"
            >Password</label>
          </div>
          <div class="mt-2">
            <input
              id="password"
              name="password"
              type="password"
              required
              class="block pl-2 w-full rounded-md border border-gray-300 py-2 text-gray-900 shadow-sm focus:ring-indigo-600 placeholder:text-gray-400 focus:ring focus:outline-none"
            />
          </div>
        </div>

        <div id="error-container" class="error-container flex items-center justify-start rounded-md px-2 py-1 text-white">
          {{#if query/error}}
            <span class="py-2 text-red-600">{{query/error}}</span>
            <button id="close-btn" class="close-btn flex flex-col">
              <svg class="w-4 h-4 ml-4 fill-red-600 items-center align-middle" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                <path d="M10 8.59l-4.95-4.95-1.41 1.41L8.59 10 3.64 14.95l1.41 1.41L10 11.41l4.95 4.95 1.41-1.41L11.41 10l4.95-4.95-1.41-1.41L10 8.59z"/>
              </svg>
            </button>
          {{/if}}
        </div>

        <div>
          <button
            type="submit"
            class="flex w-full justify-center rounded-md bg-red-300 px-3 py-2 text-sm font-semibold leading-5 text-grey-900 shadow-sm hover:bg-red-400 focus:outline-none focus:ring focus:ring-indigo-200 focus:ring-offset-2 focus:ring-offset-gray-100"
          >Sign in</button>
        </div>
      </form>

      <p class="mt-6 text-center text-sm text-gray-500">
        Not a member?
        <a
          href="/auth/register"
          class="font-semibold text-red-900 hover:text-red-600"
        >Register</a>
      </p>
    </div>
  </div>
</div>

<script src="/js/auth/login.mjs"></script>