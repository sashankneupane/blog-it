<link rel="stylesheet" href="/styles/blog-edit.css">
<div class="edit-blog">
        <header>
            <h1>Edit Blog</h1>
            <a href="/dashboard">Back to Dashboard</a>
        </header>

        <form action="/blog/{{blogPost._id}}/edit" method="post">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="{{blogPost.title}}" required>
            </div>

            <div class="form-group">
                <label for="content">Content</label>
                <textarea id="content" name="content" required>{{blogPost.content}}</textarea>
            </div>

            <div class="form-group">
                <label for="tags">Tags (comma-separated)</label>
                <input type="text" id="tags" name="tags" value="{{blogPost.tags}}" required>
            </div>

            <div class="form-actions">
                <button type="submit">Update Blog</button>
                <a href="/dashboard">Cancel</a>
            </div>
        </form>
    </div>