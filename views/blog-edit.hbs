<div
  class="bg-red-100 flex flex-row justify-around py-10 px-5"
>
  {{>leftdashboard}}
<div class="mx-auto p-4 h-full rounded-lg max-w-4/5 w-3/5">
    <header class="text-center">
      <h1 class="text-2xl font-semibold font-mono">Edit a Blog Post</h1>
    </header>

    <form action="/blog/{{blogPost._id}}/edit" method="post">
      <div class="mb-4">
        <label for="title" class="block font-medium mb-2 pb-2">Title</label>
        <input
          type="text"
          id="title"
          name="title"
          value="{{blogPost.title}}"
          required
          class="w-full px-3 bg-red-50 py-2 border rounded-md focus:outline-none focus:ring focus:ring-primary-400"
        />
      </div>

      <div class="mb-4">
        <label for="content" class="block font-medium mb-2 pb-2">Content</label>
        <textarea
          id="content"
          name="content"
          required
          class="w-full h-32 resize-y px-3 bg-red-50 py-2 border rounded-md focus:outline-none focus:ring focus:ring-primary-400"
        >{{blogPost.content}}</textarea>
      </div>

      <div class="mb-4">
        <label for="tags" class="block font-medium mb-2 pb-2">Tags (comma-separated)</label>
        <input
          type="text"
          id="tags"
          name="tags"
          value="{{blogPost.tags}}"
          required
          class="w-full px-3 bg-red-50 py-2 border rounded-md focus:outline-none focus:ring focus:ring-primary-400"
        />
      </div>

      <div class="mb-4">
        <button
          type="submit"
          class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 focus:ring focus:ring-green-700"
        >
          Update Blog
        </button>
        <a href="/u/dashboard" class="px-4 py-3 bg-red-300 hover:bg-red-400 rounded-md text-white ml-2">Cancel</a>
      </div>
    </form>
  </div>
  {{>rightdashboard}}
</div>