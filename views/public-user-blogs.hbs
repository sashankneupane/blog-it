<link rel="stylesheet" href="/styles.css" />
<div class="max-w-screen-lg mx-auto p-6 user-blogs-wrapper">
  <h1 class="text-3xl font-semibold">{{username}}'s Blogs</h1>
  {{#if blogPosts.length}}
    <ul class="blog-list">
      {{#each blogPosts}}
        <li class="border border-gray-300 p-4 rounded-md my-4 blog-post">
          <a
            href="/blog/{{_id}}"
            class="text-xl font-semibold hover:underline"
          >{{title}}</a>
          <p class="text-gray-500 text-sm mt-2 date">Published on
            {{publicationDate}}</p>
          <p class="mt-2">{{content}}</p>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p class="text-lg mt-4">No blogs available for this user.</p>
  {{/if}}
</div>